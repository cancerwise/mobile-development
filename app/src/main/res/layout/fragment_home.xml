<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_cl"
    tools:context=".ui.home.HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="Scroolview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/inter_xbold"
                    android:text="Our Product"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:paddingStart="100dp"
                    android:paddingEnd="80dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_title_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/playfair_display_bold"
                android:text="Lung Cancer"
                android:textColor="@color/lessdark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20002 Cases Total Worldwide"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:textColor="@color/lessdark"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_fill"/>
                <ImageView
                    android:id="@+id/star_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_fill"/>
                <ImageView
                    android:id="@+id/star_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_fill"/>
                <ImageView
                    android:id="@+id/star_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_fill"/>
                <ImageView
                    android:id="@+id/star_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_star"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_death_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80% of Total Death Rate"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:fontFamily="@font/inter"
                android:textColor="#5C5C5C"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_takequiz"
                    android:text="Take the Quiz Now"
                    android:fontFamily="@font/inter_bold"
                    app:backgroundTint="@null"
                    android:textAllCaps="false"
                    android:textColor="#EEEEEE"
                    android:background="@drawable/btn_blue_alt"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_record"
                    android:text="See Record"
                    android:fontFamily="@font/inter_bold"
                    app:backgroundTint="@null"
                    android:layout_marginStart="20dp"
                    android:textAllCaps="false"
                    android:textColor="#5A5A5A"
                    android:background="@drawable/btn_white_stroke_alt"/>



            </LinearLayout>



            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="20dp"
                android:background="#656565"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:textColor="#8b8b8b"
                        android:textAllCaps="true"
                        android:text="TIME"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:fontFamily="@font/inter_xbold"
                        android:textColor="#282828"
                        android:text="5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minutes"
                        android:fontFamily="@font/inter"
                        android:textSize="14sp"
                        android:textColor="@color/lessdark"/>

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_marginVertical="10dp"
                    android:layout_height="match_parent"
                    android:background="#656565"/>


                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:textColor="#8b8b8b"
                        android:textAllCaps="true"
                        android:text="Consist"/>

                    <TextView
                        android:id="@+id/tv_questions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:fontFamily="@font/inter_xbold"
                        android:textColor="#282828"
                        android:text="15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Questions"
                        android:fontFamily="@font/inter"
                        android:textSize="14sp"
                        android:textColor="@color/lessdark"/>

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_marginVertical="10dp"
                    android:layout_height="match_parent"
                    android:background="#656565"/>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:textColor="#8b8b8b"
                        android:textAllCaps="true"
                        android:text="Language"/>

                    <TextView
                        android:id="@+id/tv_english"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:fontFamily="@font/inter_xbold"
                        android:textColor="#282828"
                        android:text="EN"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:fontFamily="@font/inter"
                        android:textSize="14sp"
                        android:textColor="@color/lessdark"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="20dp"
                android:background="#656565"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="Description"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="80dp"
                android:text="The book contains a detailed explanation and analysis of the 5th-century BC Chinese military, from weapons, environmental conditions, and strategy to rank and discipline. Sun also stressed the importance of intelligence operatives and espionage to the war effort. Considered one of history's finest military tacticians and analysts, his teachings and strategies formed the basis of advanced military training for millennia to come."
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>